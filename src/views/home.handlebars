{{! vista que se renderiza en /product/home }}
<div>
  <h1>Vista del usuario</h1>
</div>

<div class="grid place-items-center">
  <h1
    class="block text-gray-1000 font-bold md:text-right mb-1 md:mb-0 pr-4"
  >Hola de nuevo {{name}} {{lastname}}!!</h1>
</div>
<div class="grid place-items-center">
  <h1
    class="block text-gray-1000 font-bold md:text-right mb-1 md:mb-0 pr-4"
  >Productos en stock</h1>
</div>
<div class="grid grid-cols-4 gap-4">
  {{#each prod}}

    <div>
      <ul class="border-dotted border-2 border-indigo-600">
        <li>Nombre: {{title}} </li>
        <li>Descripcion: {{description}} </li>
        <li>Precio: {{price}} </li>
        <li>Stock disponible: {{stock}} </li>
        <li></li>
      </ul>

    </div>

  {{/each}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/socketio.js"></script>