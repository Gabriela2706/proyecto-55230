<div class="grid h-screen place-items-center">
  <div class="w-full max-w-xs">
    <form class="w-full max-w-sm" method="POST" id="formLogin">
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
            for="email"
          >
            Email
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="bg-gray-700 appearance-none border-2 border-gray-700 rounded w-full py-2 px-4 text-gray-200 leading-tight focus:outline-none focus:bg-gray-500"
            id="email"
            type="text"
            name="email"
            placeholder="email"
          />
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
            for="password"
          >
            Password
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="bg-gray-700 appearance-none border-2 border-gray-700 rounded w-full py-2 px-4 text-gray-200 leading-tight focus:outline-none focus:bg-gray-500"
            id="password"
            type="password"
            name="password"
            placeholder="password"
          />
        </div>
      </div>
      <div class="md:flex md:items-center">
        <div class="md:w-1/3"></div>
        <div class="md:w-2/3">
          <input
            class="btn btn-success btn-lg"
            type="submit"
            value="Log In"
          />
          
          <button type="button" class="btn btn-success btn-lg" >
            
            <a href="http://localhost:8080/api/user/github">Log In GitHub</a>
          </button>

      </div>
    </form>
  </div>
</div>